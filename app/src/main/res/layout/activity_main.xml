    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="mx.ivajotha.calculadora.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.1">

        <EditText
            android:id="@+id/displaySummary"
            android:background="#111"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_margin="@dimen/notmargin"
            android:padding="@dimen/display_pading"
            android:layout_width="match_parent"
            android:textSize="@dimen/txtSizeDisplay"
            android:layout_height="match_parent"
            android:focusable="false"
            />
        <EditText
            android:id="@+id/displayOperations"
            android:background="#111"
            android:textColor="#fff"
            android:text="0"
            android:gravity="right"
            android:textSize="@dimen/txtSizeDisplay"
            android:layout_weight="1"
            android:layout_margin="@dimen/notmargin"
            android:padding="@dimen/display_pading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            />

    </LinearLayout>
    <FrameLayout
        android:layout_weight="0.8"
        android:id="@+id/fragmentMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

